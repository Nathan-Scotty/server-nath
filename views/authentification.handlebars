<h2>{{titre}}</h2>

<!-- Formulaire pour creer un compte utilisateur-->
<form id="form-auth" novalidate>
    <label>
        Prénom
        <input type="text" id="input_prenom" placeholder="Prénom" required>
    </label>
    <div id="erreur-prenom" class="erreur hidden"></div>
    <label>
        Nom 
        <input type="text" id="input_nom" placeholder="Nom" required>
    </label>
    <div id="erreur-nom" class="erreur hidden"></div>
    <label>
        Nom d'utilisateur
        <input type="email" id="input-nom-utilisateur" placeholder="Courriel" required>
    </label>
    <div id="error-courriel" class="erreur hidden"></div>
    <div id="error" class="erreur hidden"></div>
    <label>
        Mot de passe
        <input type="password" id="input-mot-de-passe" required>
    </label>
    <div id="erreur-mot" class="erreur hidden"></div>
    <input type="submit" value="{{titre}}">
</form>